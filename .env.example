# Firebase Configuration
# Obtener desde Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Mundero Integration Configuration
VITE_MUNDERO_BASE_URL=https://mundero.net
MUNDERO_API_KEY=your_mundero_api_key_here
VITE_API_MODE=prod
VITE_API_TIMEOUT=30000
VITE_API_MAX_RETRIES=3

# Configuración de Desarrollo (Opcional)
VITE_APP_NAME=MUNDERO Hub
VITE_APP_VERSION=2.1.0
VITE_APP_ENVIRONMENT=development

# URLs de Aplicaciones Integradas (Opcional)
VITE_LEGALTY_URL=https://legalty.mundero.net
VITE_WE_CONSULTING_URL=https://weconsulting.mundero.net

# Analytics (Opcional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Configuración de Dominio
VITE_DOMAIN=hub.mundero.net
VITE_API_URL=https://api.mundero.net

# Configuración de Desarrollo Local
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost

# Configuración de Build
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# Configuración de Logs (Desarrollo)
VITE_LOG_LEVEL=info
VITE_DEBUG_MODE=false